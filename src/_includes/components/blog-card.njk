<article class="relative isolate flex flex-col gap-8 lg:flex-row">
  <div class="relative aspect-[16/9] sm:aspect-[2/1] lg:aspect-square lg:w-64 lg:shrink-0">
    <img src="{{ blog.data.image }}" alt="{{ blog.data.imageAlt }}" class="absolute inset-0 h-full w-full rounded-2xl bg-gray-50 object-cover fix-filter">
    <div class="absolute inset-0 rounded-2xl"></div>
  </div>
  <div>
    <div class="flex items-center gap-x-4 text-xs">
      <time datetime="{{ blog.data.date }}" class="text-gray-500">{{ blog.data.prettyDate }}</time>
      <a class="relative z-10 rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-100">{{ blog.data.tags }}</a>
    </div>
    <div class="group relative max-w-xl">
      <h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
        <a href="{{ blog.url }}">
          <span class="absolute inset-0"></span>
          {{ blog.data.headline }}
        </a>
      </h3>
      <p class="mt-5 text-sm leading-6 text-gray-600">{{ blog.data.summary }}</p>
    </div>
  </div>
</article>